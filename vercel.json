{
  "version": 2,
  "builds": [
    {
      "src": "api/download.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "yt-dlp/**"
        ]
      }
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/api/download.js",
      "dest": "/api/download.js",
      "methods": ["POST"]
    },
    {
      "src": "/(.*\\.(css|js|html))",
      "dest": "/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.html"
    }
  ]
}
